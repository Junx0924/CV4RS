{
    "random_seed": 0,
    "verbose": true,
    "save_model": true,
    "cuda_device": 0,
    "sz_embedding": 128,
    "backend": "faiss-gpu",
    "nb_epochs": 120,
    "nb_clusters": 8,
    "finetune_epoch": 110,
    "num_samples_per_class": 2,
    "dataset_selected": "BigEarthNet",
    "pretrained_weights_file": "pretrained_weights/resnet50-19c8e357.pth",
    "dataset": {
